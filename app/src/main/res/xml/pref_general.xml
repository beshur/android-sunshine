<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:title="@string/pref_location_key"
        android:key="pref_location_key"
        android:defaultValue="@string/pref_location_default"
        android:inputType="text"
        android:singleLine="true" />

    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="C"
        android:entries="@array/pref_temperature_units_list_titles"
        android:entryValues="@array/pref_temperature_units_list_values"
        android:key="pref_temperature_units"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_temperature_units" />

</PreferenceScreen>
